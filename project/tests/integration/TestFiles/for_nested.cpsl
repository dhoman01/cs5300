$ var i, j : integer;

BEGIN 

  for i := 0 to 5 do
    write("i = ", i, "\n");
    for j := i downto 0 do
        write("\tj = ", j, "\n");
    end;
  end;

  write("\n");

  for i := 5 downto 0 do
    write("i = ", i, "\n");
    for j := i to 5 do
        write("\tj = ", j, "\n");
    end;
  end;

END.