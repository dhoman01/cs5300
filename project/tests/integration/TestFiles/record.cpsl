TYPE
  recordType = RECORD
	  	 x,y,z : integer;
	       END;
VAR
  source : recordType;
  x,y,z : integer;
BEGIN

$ Assign test values to the variables and recordType
$ member variables.

x := 50;
source.x := 40;
write(source.x, "=source.x ");

y := 51;
source.y := 41;
write(source.y, "=source.y ");

z := 52;
source.z := 42;
write(source.z, "=source.z ");

$ Show that recordType's member variables are different
$ from regular variables of the same name.

write(x, "=x ");
write(y, "=y ");
write(z, "=z ");

END.
